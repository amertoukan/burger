
<div class = 'container bg'>
    <div class = row>
        <div class = "center col-sm-12">
            <h1> Eat-Da-Burger </h1>
        </div>
    </div>

<section class = row >
        <div class = 'col-md-7 col-left'>
            <h3> Burgers to eat </h3>
            <hr>
     <table>
    {{#each burgers}}
    {{#unless this.devoured}}

{{> burgers/burger-block }}
    {{/unless}}
    {{/each}}
    </table>
     </div>   

    <div class = 'col-sm-5'>
        <h3>Burgers that have been eaten</h3>


{{#each burgers}}
{{#if this.devoured}}

    <div>{{id}}.{{burger_name}}</div>

{{/if}}
{{/each}}
</div>
</section>

	<section class="row">
	    <div class="center col-sm-12">

			<h2>Add A Burger!</h2>

			<form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="What do you want to eat?"></textarea>
        </div>
        <button type="submit" class = 'btn btn-primary'>Add Burger</button>
    </form>     
</div>

			</form>

</div>
</div>
</div>